@page "/Register"
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<section class="position-fixed top-0 bottom-0 start-0 end-0 d-flex flex-column overflow-auto" style="z-index: -1">
    <div class="container-fluid h-custom flex-grow-1">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-md-9 col-lg-6 col-xl-5">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
                     class="img-fluid" alt="Sample image">
            </div>
            <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                <form method="post">
                    <!-- User Name input -->
                    <div class="form-outline mb-4">
                        @Html.LabelFor(temp => temp.Input.Name)
                        @Html.TextBoxFor(temp => temp.Input.Name, new { placeholder = "Enter your name", @class = "form-control" })
                        @Html.ValidationMessageFor(temp => temp.Input.Name)
                    </div>

                    <!-- Email input -->
                    <div class="form-outline mb-4">
                        @Html.LabelFor(temp => temp.Input.Email)
                        @Html.TextBoxFor(temp => temp.Input.Email, new { placeholder = "Enter a valid email address", @class = "form-control" })
                        @Html.ValidationMessageFor(temp => temp.Input.Email)
                    </div>

                    <!-- Password input -->
                    <div class="form-outline mb-3">
                        @Html.LabelFor(temp => temp.Input.Password)
                        @Html.TextBoxFor(temp => temp.Input.Password, new { placeholder = "Enter password", @class = "form-control" })
                        @Html.ValidationMessageFor(temp => temp.Input.Password)
                    </div>

                    <!-- Confirm Password input -->
                    <div class="form-outline mb-3">
                        @Html.LabelFor(temp => temp.Input.ConfirmPassword)
                        @Html.TextBoxFor(temp => temp.Input.ConfirmPassword, new { placeholder = "Confirm password", @class = "form-control" })
                        @Html.ValidationMessageFor(temp => temp.Input.ConfirmPassword)
                    </div>

                    <!-- DepartmentId input -->
                    <div class="form-outline mb-3">
                        @Html.LabelFor(temp => temp.Input.DepartmentId)
                        @Html.DropDownListFor(row => row.Input.DepartmentId, Model.ListItems, "Select department...", new { @class = "form-select" })
                        @* <select class="form-select" name="DepartmentId" asp-for="Input.DepartmentId">
                            <option selected>Select department...</option>
                            @foreach (var department in @Model.ListDepartment)
                            {
                                <option value="@department.Id">@department.Name</option>
                            }
                        </select> *@
                        @Html.ValidationMessageFor(temp => temp.Input.DepartmentId)
                    </div>

                    <div class="text-center text-lg-start mt-4 pt-2">
                        <button type="submit" class="btn btn-primary btn-lg w-100"
                                style="padding-left: 2.5rem; padding-right: 2.5rem;">
                            Register
                        </button>
                        <p class="small fw-bold mt-2 pt-1 mb-0">
                            Already have an account? <a class="link-danger" asp-area="" asp-page="./Login">Login</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
