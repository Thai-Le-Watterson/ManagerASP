<h1 class="text-center">@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <section class="position-fixed top-0 bottom-0 start-0 end-0" style="z-index: -1">
            <div class="container py-5 h-100">
                <div class="row d-flex align-items-center justify-content-center h-100">
                    <div class="col-md-8 col-lg-7 col-xl-6">
                        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg"
                             class="img-fluid" alt="Phone image">
                    </div>
                    <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
                        <form method="post">
                            <!-- Email input -->
                            <div class="form-outline mb-4">
                                @Html.LabelFor(row => row.Input.Email, "Email", new { @class = "form-label" })
                                @Html.TextBoxFor(row => row.Input.Email, new { @class = "form-control form-control-lg" })
                                @Html.ValidationMessageFor(row => row.Input.Email)
                            </div>

                            <!-- Name input -->
                            @* <div class="form-outline mb-4">
                                @Html.LabelFor(row => row.Input.Name, "Password", new { @class = "form-label" })
