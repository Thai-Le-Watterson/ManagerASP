                                @Html.ValidationMessageFor(row => row.Input.Name)
                            </div> *@

                            <!-- Password input -->
                            <div class="form-outline mb-4">
                                @Html.LabelFor(row => row.Input.Password, "Password", new { @class = "form-label" })
                                @Html.TextBoxFor(row => row.Input.Password, new { @class = "form-control form-control-lg" })
                                @Html.ValidationMessageFor(row => row.Input.Password)
                            </div>

                            <div class="d-flex justify-content-around align-items-center mb-4">
                                <!-- Checkbox -->
                                <div class="form-check">
                                    <label asp-for="Input.RememberMe" class="form-label">
                                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                                        <input class="form-check-input" type="checkbox" value="true" asp-for="Input.RememberMe" checked />
                                    </label>
                                </div>
                            </div>

                            <!-- Submit button -->
                            <div class="form-outline mb-4">
                                <button type="submit" class="btn btn-primary btn-lg btn-block w-100">Sign in</button>
                                <p class="small fw-bold mt-2 pt-1 mb-0">
                                    Dont't have an account? <a class="link-danger" asp-page="./Register">Register</a>
                                </p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </section>
